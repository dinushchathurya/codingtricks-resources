apiVersion: kyverno.io/v1
kind: ClusterPolicy
metadata:
  name: security-standards
spec:
  validationFailureAction: enforce
  rules:
  - name: non-root-user
    match:
      any:
      - resources:
          kinds:
          - Pod
    validate:
      message: "Containers must run as non-root user"
      pattern:
        spec:
          containers:
          - name: "*"
            securityContext:
              runAsNonRoot: true
